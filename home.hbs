 <script>
    document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("model-2");
    const floatingIcon = document.getElementById("floating-icon");
    const closeButton = document.querySelector(".close-button");
    const expandButton = document.querySelector(".expand-button");
    const modalIframe = document.getElementById("modal-iframe");

    // Open the modal when the floating icon is clicked
    floatingIcon.onclick = () => {
        modalIframe.src = "https://chat-boxai.vercel.app/"; // Set the iframe source to the desired URL
        modal.style.display = "block";
        document.body.style.overflow = "hidden"; // Disable body scrolling
    };

    // Close the modal when the close button is clicked
    closeButton.onclick = () => {
        modal.style.display = "none";
        modalIframe.src = ""; // Clear the iframe source to stop loading the page
        document.body.style.overflow = "auto"; // Re-enable body scrolling
    };

    
    // Close the modal when clicking outside of the modal
    window.onclick = (event) => {
        if (event.target === modal) {
            modal.style.display = "none";
            modalIframe.src = ""; // Clear the iframe source
            document.body.style.overflow = "auto"; // Re-enable body scrolling
        }
    };
});

    document.addEventListener('DOMContentLoaded', () => {
